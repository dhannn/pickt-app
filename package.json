{
    "scripts": {
        "install": "npm-run-all -p install-server install-client",
        "start": "npm-run-all -p  start-server start-client",
        "start-server": "npm start --prefix ./pickt-server",
        "start-client": "npm start --prefix ./pickt-client/",
        "install-client": "npm install --prefix ./pickt-client/ --legacy-peer-deps/",
        "install-server": "npm install --prefix ./pickt-server/"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5"
    }
}
